{
	"paths": {
		"input": {
			"root": "src",
			"scripts": "src/scripts/",
			"styles": "src/sass/**/*.scss",
			"stylesFolder": "src/sass",
			"staticDev": ["src/**/*", "!src/**/*.html", "!src/scripts/**/*", "!src/sass/**/*"],
			"staticBuild": ["src/**/*", "!src/**/*.html", "!src/scripts/**/*", "!src/styles/**/*", "!src/images/**/*"]
		},

		"output": {
			"devRoot": "./dist",
			"scripts": "dist/scripts",
			"styles": "dist/css"
		}
	},
	"browserSync": {
		"useProxy": false,
		"proxyUrl": "localhost:8088/pantheon"
	},
	"lintedFiles": [
		"src/sass/**/*.scss",
		"!src/sass/main.scss",
		"!src/sass/common/_spritesheet.scss",
		"!src/sass/components/_components.scss",
		"!src/sass/common/_base.scss",
		"!src/sass/common/_mixins.scss",
		"!src/sass/vendor/**/*.scss"
	],
	"sprite": {
		"mode": {
			"css": {
				"dest": "./",
				"sprite": "dist/img/sprites/sprites.svg",
				"bust": false,
				"render": {
					"scss": {
						"dest": "./src/sass/common/_spritesheet.scss",
						"template": "./src/sass/vendor/_sprite-template.scss"
					}
				}
			}
		},
		"variables": {
			"mapname": "icons"
		}
	},
	"tasksPath":"./gulp-tasks"
}
