{
	"paths": {
		"input": {
			"scripts": "src/scripts/",
			"styles": "src/sass/**/*.scss",
			"html": ["src/**/*.html", "!src/includes/**/*.html"]
		},

		"output": {
			"devRoot": "./dist",
			"scripts": "dist/scripts",
			"styles": "dist/css"
		}
	},
	"browserSync": {
		"useProxy": false,
		"proxyUrl": "localhost:8088/pantheon"
	},
	"tasksPath":"./gulp-tasks"
}
