{
	"paths": {
		"input": {
			"root": "src",
			"scripts": "src/scripts/",
			"styles": "src/styles/**/*.scss",
			"stylesFolder": "src/styles",
			"spriteSrc": "src/images/sprite-src",
			"html": ["src/**/*.html", "!src/includes/**/*.html"],
			"templates": ["src/**/*.html", "src/data/**/*"],
			"images": "src/images/**/*",
			"staticDev": ["src/**/*", "!src/**/*.html", "!src/scripts/**/*", "!src/styles/**/*", "!src/data/**/*"],
			"staticBuild": ["src/**/*", "!src/**/*.html", "!src/scripts/**/*", "!src/styles/**/*", "!src/images/**/*", "!src/data/**/*"],
			"img": ["src/scripts/"]
		},
		"output": {
			"devRoot": "./dist",
			"images": "dist/images",
			"scripts": "dist/scripts",
			"styles": "dist/styles",
			"html": "dist/**/*.html"
		}
	},
	"browserSync": {
		"useProxy": false,
		"proxyUrl": "localhost:8088/pantheon"
	},
	"lintedFiles": [
		"src/styles/**/*.scss",
		"!src/styles/main.scss",
		"!src/styles/common/_spritesheet.scss",
		"!src/styles/components/_components.scss",
		"!src/styles/common/_base.scss",
		"!src/styles/common/_mixins.scss",
		"!src/styles/vendor/**/*.scss"
	],
	"sprite": {
		"mode": {
			"css": {
				"dest": "./",
				"sprite": "dist/images/sprites/sprites.svg",
				"bust": false,
				"render": {
					"scss": {
						"dest": "./src/styles/common/_spritesheet.scss",
						"template": "./src/styles/vendor/_sprite-template.scss"
					}
				}
			}
		},
		"variables": {
			"mapname": "icons"
		}
	},
	"tasksPath":"./gulp-tasks"
}
