{
	"paths": {
		"input": {
			"root": "src",
			"scripts": "src/scripts/",
			"styles": "src/sass/**/*.scss",
			"staticDev": ["src/**/*", "!src/**/*.html", "!src/scripts/**/*", "!src/sass/**/*"],
			"staticBuild": ["src/**/*", "!src/**/*.html", "!src/scripts/**/*", "!src/styles/**/*", "!src/images/**/*"]
		},

		"output": {
			"devRoot": "./dist",
			"scripts": "dist/scripts",
			"styles": "dist/css"
		}
	},
	"browserSync": {
		"useProxy": false,
		"proxyUrl": "localhost:8088/pantheon"
	},
	"tasksPath":"./gulp-tasks"
}
